@model KursKayit

<h2>Kurs Kaydı Ekle</h2>
<hr>
<form asp-controller = "KursKayit" asp-action = "create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrenci Adı</label>
        <select asp-for="OgrenciId" asp-items = "@ViewBag.Ogrenciler" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs</label>
        <select asp-for="OgrenciId" asp-items = "@ViewBag.Kurslar" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>